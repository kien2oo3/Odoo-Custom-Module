<?xml version="1.0" encoding="UTF-8"?>

<odoo>

    <data>

        <record id="leave_batchupdate_wizard_form_view" model="ir.ui.view">
            <field name="name">leave.batchupdate.wizard.form</field>
            <field name="model">leave.batchupdate.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="state" />
                        </group>
                        <footer>
                            <button name="button_update_timeoff_state" string="Update" type="object"
                                class="btn btn-success" />
                            <button string="cancel" special="cancel" />
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

    </data>

</odoo>