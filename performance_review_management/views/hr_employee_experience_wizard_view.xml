<?xml version="1.0" encoding="UTF-8"?>

<odoo>

    <data>

        <record id="employee_experience_year_wizard_form_view" model="ir.ui.view">
            <field name="name">employee.experience.year.wizard.form</field>
            <field name="model">hr.employee.experience.year.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="employee_id" readonly="1" />
                            <field name="experience_years" />
                        </group>
                        <footer>
                            <button name="action_confirm_experience_year" string="Ok" type="object" class="oe_stat_button" icon="fa-check"/>
                            <button string="cancel" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

    </data>


</odoo>